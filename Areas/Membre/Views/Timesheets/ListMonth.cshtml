@model List<TaskManager.Models.TaskModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.white-container {
    background-color: white;       /* ← La couleur de fond blanche */
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
	color:  violet;
}
</style>

<!-- Container blanc pour le titre uniquement -->
<div class="white-container p-3 my-4 shadow-sm rounded">
    <h2 class="m-0">Liste des tâches du mois</h2>
</div>

<!-- Container blanc séparé pour le tableau -->
<div class="white-container p-4 shadow-sm rounded">
    <table class="table table-striped table-bordered mt-3 mb-0">
        <thead class="table-light">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Échéance</th>
                <th>Assigné à</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        Aucune tâche pour l'instant.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Description</td>
                        <td>@task.DueDate.ToString("dd/MM/yyyy")</td>
                        <td>@task.AssignedToUser?.Name ?? "Non assigné"</td>
                        <td>@task.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
