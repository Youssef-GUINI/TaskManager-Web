@model TaskManager.Models.TaskModel
@{
    ViewData["Title"] = "Créer une Tâche";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        ✨ Créer une Nouvelle Tâche
                    </h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Titre -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="fas fa-heading text-primary me-1"></i>
                                Titre de la tâche *
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Ex: Développer la nouvelle fonctionnalité" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left text-primary me-1"></i>
                                Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Décrivez en détail ce qui doit être fait..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Date d'échéance -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt text-primary me-1"></i>
                                    Date d'échéance *
                                </label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <!-- Priorité -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Priority" class="form-label fw-bold">
                                    <i class="fas fa-exclamation-circle text-primary me-1"></i>
                                    Priorité *
                                </label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="Low">🟢 Faible</option>
                                    <option value="Medium" selected>🟡 Moyenne</option>
                                    <option value="High">🔴 Haute</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Statut -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">
                                    <i class="fas fa-tasks text-primary me-1"></i>
                                    Statut *
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="To Do" selected>📝 À faire</option>
                                    <option value="In Progress">⚡ En cours</option>
                                    <option value="Completed">✅ Terminé</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <!-- ✨ NOUVEAU : Assigner à un utilisateur -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="AssignedToUserId" class="form-label fw-bold">
                                    <i class="fas fa-user text-primary me-1"></i>
                                    Assigner à
                                </label>
                                <select asp-for="AssignedToUserId" asp-items="ViewBag.AssignedToUsers" class="form-select">
                                    <option value="">👤 Sélectionner un utilisateur</option>
                                </select>
                                <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Optionnel : Choisissez qui sera responsable de cette tâche
                                </small>
                            </div>
                        </div>

                        <!-- ✨ NOUVEAU : Créé par (caché ou automatique) -->
                        <input asp-for="CreatedByUserId" type="hidden" />

                        <!-- Aperçu de la tâche -->
                        <div class="alert alert-info" role="alert">
                            <h6><i class="fas fa-eye me-1"></i> Aperçu :</h6>
                            <p class="mb-1">
                                <strong>Titre :</strong> <span id="preview-title">Titre de la tâche</span>
                            </p>
                            <p class="mb-1">
                                <strong>Échéance :</strong> <span id="preview-date">--/--/----</span>
                            </p>
                            <p class="mb-0">
                                <strong>Priorité :</strong> <span id="preview-priority">Moyenne</span>
                            </p>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>

                            <div>
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-1"></i>
                                    💾 Créer la Tâche
                                </button>
                                <a href="@Url.Action("Index", "Timesheets")" class="btn btn-outline-success">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    📅 Voir dans le Calendrier
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Aide/Conseils -->
            <div class="card mt-3 border-0 bg-light">
                <div class="card-body p-3">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-lightbulb me-1"></i>
                        💡 Conseils
                    </h6>
                    <ul class="small text-muted mb-0">
                        <li>✅ Un titre clair aide toute l'équipe à comprendre l'objectif</li>
                        <li>📅 Définissez une date réaliste en tenant compte des dépendances</li>
                        <li>👥 Assigner la tâche permet un suivi personnalisé</li>
                        <li>🔴 Les tâches haute priorité apparaissent en rouge dans le calendrier</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script pour l'aperçu en temps réel -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const titleInput = document.getElementById('Title');
        const dueDateInput = document.getElementById('DueDate');
        const prioritySelect = document.getElementById('Priority');

        const previewTitle = document.getElementById('preview-title');
        const previewDate = document.getElementById('preview-date');
        const previewPriority = document.getElementById('preview-priority');

        // Mise à jour en temps réel de l'aperçu
        function updatePreview() {
            previewTitle.textContent = titleInput.value || 'Titre de la tâche';

            if (dueDateInput.value) {
                const date = new Date(dueDateInput.value);
                previewDate.textContent = date.toLocaleDateString('fr-FR');
            } else {
                previewDate.textContent = '--/--/----';
            }

            const priorityText = {
                'Low': '🟢 Faible',
                'Medium': '🟡 Moyenne',
                'High': '🔴 Haute'
            };
            previewPriority.textContent = priorityText[prioritySelect.value] || 'Moyenne';
        }

        // Événements pour la mise à jour
        titleInput?.addEventListener('input', updatePreview);
        dueDateInput?.addEventListener('change', updatePreview);
        prioritySelect?.addEventListener('change', updatePreview);

        // Initialiser l'aperçu
        updatePreview();

        // Définir la date par défaut à dans 7 jours
        if (dueDateInput && !dueDateInput.value) {
            const nextWeek = new Date();
            nextWeek.setDate(nextWeek.getDate() + 7);
            dueDateInput.value = nextWeek.toISOString().split('T')[0];
            updatePreview();
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}