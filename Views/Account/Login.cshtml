@model TaskManager.Models.LoginViewModel
@{
    Layout = null;
    
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/backgroundcc.jpg') no-repeat center center fixed;
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: rgba(0, 0, 0, 0.4);
            color: white;
            backdrop-filter: blur(12px);
            padding: 40px;
            border-radius: 18px;
            width: 550px;
            height:  450px;
            box-shadow: 0 8px 30px rgba(42, 63, 84, 0.5);
        }

        .title-logo {
            text-align: center;
            font-family: 'Poppins', sans-serif;
            font-weight: bold;
            font-size: 50px;
            color: #9D4EDD;
            margin-bottom: 25px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .form-control {
            background-color: rgba(255,255,255,0.1);
            color: white;
            border: none;
        }

        .form-control::placeholder {
            color: rgba(255,255,255,0.6);
        }

        .form-control:focus {
            background-color: rgba(255,255,255,0.2);
            color: white;
            box-shadow: none;
        }

        .btn-purple {
            background-color: #6C6CE9;
            color: white;
            font-weight: bold;
            border: none;
        }

        .btn-purple:hover {
            background-color: #8a2be2;
            transform: translateY(-1px);
        }

        .form-check-label {
            font-size: 14px;
        }

        .links, .signup-line {
            text-align: center;
            font-size: 14px;
            margin-top: 15px;
        }

        .links a, .signup-line a {
            color: #C77DFF;
            text-decoration: none;
        }

        .links a:hover, .signup-line a:hover {
            text-decoration: underline;
        }

        .input-group-text {
            background-color: rgba(255,255,255,0.1);
            border: none;
            color: white;
            cursor: pointer;
        }

        .input-group-text:hover {
            background-color: rgba(255,255,255,0.2);
        }
    </style>
</head>
<body>

    <div class="login-container">
        <h2 class="title-logo">SQLI</h2>

        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" placeholder="Mot de passe" type="password" id="passwordInput" />
                    <span class="input-group-text" id="togglePassword">üëÅÔ∏è</span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-purple w-100">Sign In</button>

            <div class="links mt-3">
                <a href="/Account/ForgotPassword">Forgot your Password  ?</a>
            </div>

            <div class="text-danger mt-2">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const passwordInput = document.getElementById("passwordInput");
        const togglePassword = document.getElementById("togglePassword");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);

            this.textContent = type === "password" ? "see" : "hide";
        });
    </script>
</body>
</html>
